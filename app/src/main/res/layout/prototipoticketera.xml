<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_material_light">

    <!-- Cabecera -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/top" />

        <!-- Título KVBE -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Ticketera"
            android:textColor="#F4F3F3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Título DOCENTE -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="60dp"
            android:text="Revisar Ticket"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/undo" />
    </RelativeLayout>

    <!-- ScrollView para el contenido del formulario -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Formulario -->
            <TextView
                android:id="@+id/ticket_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asunto del Ticket"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Emisor -->
            <TextView
                android:id="@+id/ticket_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emisor: ejemplo@correo.com"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <!-- Mensaje del Emisor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:id="@+id/sender_message_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_background_light_green"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:text="Este es el contenido del mensaje del emisor." />
            </LinearLayout>

            <!-- Receptor -->
            <TextView
                android:id="@+id/ticket_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receptor: ejemplo@correo.com"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <!-- Mensaje del Receptor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/receiver_message_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_message_receiver"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:text="Este es el contenido del mensaje del receptor." />
            </LinearLayout>

            <!-- Botón para enviar el mensaje -->
            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
